<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PerimetroySuperficie4838081.MainPage">
    <ScrollView>
        <VerticalStackLayout
        Padding="30,0"
        Spacing="25">
        <Label
            Text="Calcular el perímetro y superficie"
            VerticalOptions="Center"
            HorizontalOptions="Center"/>
            <Image
              Source="are.png"
              HeightRequest="100"
              Aspect="AspectFit"/>
            <Entry
            x:Name="entryA" Placeholder="Escribe la altura del rectangulo"/>
        <Entry
            x:Name="entryB" Placeholder="Escribe la base del rectangulo"/>
        <Button
            Text="Cacular perímetro y superficie" Clicked="Button_Clicked"/>
        <Entry
            x:Name="entryP" Placeholder="Perimetro :"/>
        <Entry
            x:Name="entryS" Placeholder="Superficie :"/>
    </VerticalStackLayout>
    </ScrollView>
</ContentPage>
